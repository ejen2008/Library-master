@using Library.ViewModels.JournalViewModels
@using Library.Domain.Entities
@model IEnumerable<JournalGetViewModel>
@{
    ViewBag.Title = "List of journals";
}
@(Html.Kendo().Grid(Model)
      .Name("Grid")
      .Columns(columns =>
      {
      columns.Bound(c => c.Juornal.NameJornal);
      columns.Bound(c => c.Juornal.DatePublishing).Format("{0:MM/dd/yyyy}").Width(110);
      columns.Bound(c => c.Juornal.NumberPage).Width(110);

      columns.Template(@<text>
        @{
            foreach (Article b in item.Articles)
            {
                @b.Title <br />
            }
        }
    </text>).ClientTemplate("#=Books#").Title("Books");
          columns.Command(command =>
          {
              command.Edit().Text("Edit").UpdateText("Ok").CancelText("Cancel");
              command.Destroy().Text("Delete");
          })
              .Width(180);
      })
      .ToolBar(toolbar =>
      {
          toolbar.Create().Text("Add new author");
      })
      .Editable(editable => editable.Mode(GridEditMode.PopUp))
      .HtmlAttributes(new { style = "height: 650px;" })
      .Pageable()
      .Sortable(sortable =>
      {
          sortable.SortMode(GridSortMode.SingleColumn);
      })
      .Scrollable()
      .DataSource(dataSource => dataSource
        .Server()
        .PageSize(20)
        .Model(model => model.Id(p => p.Juornal.Id.ToString()))
        .Read(read => read.Action("Index", "Juornal"))
        .Create("Create", "Juornal")
        .Update("Update", "Juornal")
        .Destroy("Delete", "Juornal")
      )
)